default_platform(:ios)

platform :ios do
  lane :beta do
    # CI 환경에서 Keychain 설정
    if ENV["CI"]
      create_keychain(
        name: "ci.keychain",
        password: "ci_password",
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        add_to_search_list: true
      )
      ENV["MATCH_KEYCHAIN_NAME"] = "ci.keychain"
      ENV["MATCH_KEYCHAIN_PASSWORD"] = "ci_password"
    end

    # App Store Connect API Key 설정
    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key_content: ENV['ASC_API_KEY']
    )

    # 인증서 및 프로비저닝 프로파일 설치 (readonly)
    match(
      type: "appstore",
      readonly: true,
      git_url: ENV['MATCH_REPO_URL'],
      api_key: api_key
    )

    # 빌드 넘버 증가
    increment_build_number(
      xcodeproj: "SOAPFT.xcodeproj"
    )

    # 앱 빌드 (provisioning profile 이름으로 매칭)
    build_app(
      scheme: "SOAPFT",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "io.tuist.SOAPFT" => ENV["MATCH_PROFILE_NAME"]
        }
      }
    )

    # TestFlight에 업로드
    deliver(
      api_key: api_key,
      submit_for_review: false,
      skip_metadata: true,
      skip_screenshots: true
    )
  end
end
