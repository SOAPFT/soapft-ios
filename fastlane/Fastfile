default_platform(:ios)

platform :ios do
  lane :beta do
    if ENV["CI"]
      create_keychain(
        name: "ci.keychain",
        password: "ci_password",
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        add_to_search_list: true
      )
      ENV["MATCH_KEYCHAIN_NAME"] = "ci.keychain"
      ENV["MATCH_KEYCHAIN_PASSWORD"] = "ci_password"
    end

    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key_content: ENV['ASC_API_KEY']
    )

    # ✅ TestFlight용으로 type을 'development' 또는 'adhoc'으로 설정
    match(
      type: "development", # 또는 'adhoc'
      readonly: false,
      git_url: ENV['MATCH_REPO_URL'],
      api_key: api_key,
      force: true
    )

    # ✅ match에서 불러온 프로파일 이름을 정확히 지정
    build_app(
      scheme: "SOAPFT",
      export_method: "development", # 'adhoc'일 경우엔 여기서도 맞춰야 함
      export_options: {
        provisioningProfiles: {
          "io.tuist.SOAPFT" => "match Development io.tuist.SOAPFT" # 정확한 이름 확인 필요
        }
      }
    )

    # ✅ TestFlight에 올리는 것이 목적이라면 deliver → upload_to_testflight
    upload_to_testflight(api_key: api_key)
  end
end
