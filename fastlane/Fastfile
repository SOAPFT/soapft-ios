default_platform(:ios)

platform :ios do
  lane :beta do
    if ENV["CI"]
      create_keychain(
        name: "ci.keychain",
        password: "ci_password",
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        add_to_search_list: true
      )
      ENV["MATCH_KEYCHAIN_NAME"] = "ci.keychain"
      ENV["MATCH_KEYCHAIN_PASSWORD"] = "ci_password"
    end

    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key_content: ENV['ASC_API_KEY']
    )

    match(
      type: "appstore",
      readonly: false,
      git_url: ENV['MATCH_REPO_URL'],
      app_store_connect_api_key: api_key
    )

    build_app(
      scheme: "SOAPFT",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "io.tuist.SOAPFT" => "match AppStore io.tuist.SOAPFT 1750692394"
        }
      }
    )

    deliver(api_key: api_key)
  end
end
