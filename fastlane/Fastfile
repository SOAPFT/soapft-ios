platform :ios do
  lane :beta do
    if ENV["CI"] # GitHub Actions 등에서만 실행
      create_keychain(
        name: "ci.keychain",
        password: "ci_password",
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        add_to_search_list: true
      )
      ENV["MATCH_KEYCHAIN_NAME"] = "ci.keychain"
      ENV["MATCH_KEYCHAIN_PASSWORD"] = "ci_password"
    end

    match(
      type: "appstore", # or "adhoc" or "development"
      readonly: false
    )

    build_app(scheme: "SOAPFT")
    # deliver 등 배포 명령어가 있다면 여기에 추가
  end
end
